p You are registered at #{site}
p Credentials:
    table(style="border-collapse: collapse; background-color: #D8E3F0; margin: 0; width: 100%;")
        tr
            td(style="border-collapse: collapse; font-size: 14px; line-height: 140%; padding: 21px; width: 100%; vertical-align: bottom; font-family: Arial, Helvetica, Tahoma, Verdana, serif;")
                | Login: &nbsp;
                strong #{email}
                br
                | Password: &nbsp;
                strong #{password}
if status == 'activation'
    p To activate your account please follow the link: &nbsp;
    table(style="border-collapse: collapse; background-color: #D8E3F0; margin: 0; width: 100%;")
        tr
            td(style="border-collapse: collapse; font-size: 14px; line-height: 140%; padding: 21px; width: 100%; vertical-align: bottom; font-family: Arial, Helvetica, Tahoma, Verdana, serif;")
                a(href=link) #{link}
